<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/subjectLayout">

            <TextView
                android:id="@+id/subjectId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idDefValue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/scheduleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idDefValue"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/subject"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/textSubjectName"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <EditText
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:singleLine="true"
                android:hint="@string/textSubjectName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textSubjectDescription"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <EditText
                android:id="@+id/subjectDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="@string/textSubjectDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textCourse"
                android:text="@string/textSubjectCourse"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <EditText
                android:id="@+id/subjectCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:singleLine="true"
                android:hint="@string/textSubjectCourse" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutButtons">

                <Button
                    style="?android:attr/button"
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_submit"
                    android:textColor="#0D2A54" />

                <Button
                    style="?android:attr/button"
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_delete"
                    android:textColor="#FF0000" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/scheduleLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/schedule"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/textClassroom"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <EditText
                android:id="@+id/subjectClassroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:singleLine="true"
                android:hint="@string/textClassroom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textDays"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutDays"
                android:orientation="horizontal">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/ToggleButtonMon"
                    android:textSize="@dimen/toggleTextDay"
                    android:textOn="@string/lunesAbrv"
                    android:textOff="@string/lunesAbrv"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/ToggleButtonTue"
                    android:textSize="@dimen/toggleTextDay"
                    android:textOn="@string/martesAbrv"
                    android:textOff="@string/martesAbrv"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/ToggleButtonWed"
                    android:textSize="@dimen/toggleTextDay"
                    android:textOn="@string/miercolesAbrv"
                    android:textOff="@string/miercolesAbrv"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/ToggleButtonThu"
                    android:textSize="@dimen/toggleTextDay"
                    android:textOn="@string/juevesAbrv"
                    android:textOff="@string/juevesAbrv"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/ToggleButtonFri"
                    android:textSize="@dimen/toggleTextDay"
                    android:textOn="@string/viernesAbrv"
                    android:textOff="@string/viernesAbrv"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/ToggleButtonSat"
                    android:textSize="@dimen/toggleTextDay"
                    android:textOn="@string/sabadoAbrv"
                    android:textOff="@string/sabadoAbrv"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/ToggleButtonSun"
                    android:textSize="@dimen/toggleTextDay"
                    android:textOn="@string/domingoAbrv"
                    android:textOff="@string/domingoAbrv"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textHoraInicio"
                android:textSize="@dimen/descriptionTexts"
                android:textColor="#0145FF"/>

            <TextView
                android:id="@+id/scheduleHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/taskHour" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>