<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/item_student_icon"
        android:layout_width="@dimen/icon_dimen"
        android:layout_height="@dimen/icon_dimen"
        android:src="@drawable/user_default" />

    <TextView
        android:id="@+id/item_student_surname"
        android:layout_width="@dimen/student_surname"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/item_student_name"
        android:layout_width="@dimen/student_name"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin" />

</LinearLayout>